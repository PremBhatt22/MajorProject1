<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h2>SignUp for TourGifty...</h2>
        <form method="post" action="/signup" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input required name="username" placeholder="username" type="text" class="form-control">
                <div class="valid-feedback">username looks good!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input required name="email" placeholder="email" type="text" class="form-control">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input required name="password" placeholder="password" type="password" class="form-control">
            </div>
            <button class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>