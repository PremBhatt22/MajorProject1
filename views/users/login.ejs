<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h2>Login for TourGifty...</h2>
        <form method="post" action="/login" class="mt-3 needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input required name="username" placeholder="username" type="text" class="form-control"> 
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input required name="password" placeholder="password" type="password" class="form-control">
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>